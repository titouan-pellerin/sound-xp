{
	"env": {
		"browser": true,
		"es2022": true,
		"node": true
	},
	"extends": ["eslint:recommended", "prettier"],
	"parserOptions": {
		"ecmaVersion": 13,
		"sourceType": "module"
	},
	"plugins": ["prettier"],
	"rules": {
		"indent": ["warn", "tab", { "SwitchCase": 1, "offsetTernaryExpressions": true }],
		"no-tabs": "off",
		"no-unused-vars": [
			"error",
			{
				"argsIgnorePattern": "^_",
				"varsIgnorePattern": "^_"
			}
		],
		"no-var": "error",
		"prettier/prettier": "warn"
	},
	"globals": {
		"SIXTYFPS_EOY_LANG": true,
		"SIXTYFPS_EOY_ASSETS_PATH": true
	}
}
